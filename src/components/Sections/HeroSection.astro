---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Huǒ Lóng Yang Tai Chi Chuan Uruguay",
  subtitle = "Movimiento suave, respiración consciente, mente en calma.",
  backgroundImage = "/uploads/nuevapalmira1.webp",
  ctaText="Nuestras clases",
  ctaLink="#clases",
  secondaryCtaText="Quiero más información",
  secondaryCtaLink="https://wa.me/59899881278?text=Hola!%20Quisiera%20m%C3%A1s%20informaci%C3%B3n%20acerca%20de%20las%20clases%20de%20Tai%20Chi.%20Gracias"
} = Astro.props;
---

<section
  class="relative min-h-[70vh] flex items-center bg-cover pt-30"
  style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${backgroundImage}); background-position: center 30%;`}
>

  <div class="container">
    <div class="max-w-3xl text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
      
      <div class="flex flex-wrap gap-4">
        <Button href={ctaLink} variant="primary" size="lg">
          {ctaText}
        </Button>
        
        <Button href={secondaryCtaLink} target="_blank" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
          {secondaryCtaText}
        </Button>
      </div>
    </div>
  </div>
</section>